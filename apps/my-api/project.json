{
  "name": "Apps.my-api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/my-api",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx-dotnet/core:build",
      "outputs": [
        "{workspaceRoot}/dist/apps/my-api",
        "{workspaceRoot}/dist/intermediates/apps/my-api",
        "{projectRoot}/bin",
        "{projectRoot}/obj"
      ],
      "cache": true,
      "dependsOn": [
        "^build"
      ],
      "options": {
        "configuration": "Debug",
        "noDependencies": true
      },
      "configurations": {
        "production": {
          "configuration": "Release"
        }
      }
    },
    "serve": {
      "executor": "@nx-dotnet/core:serve",
      "options": {
        "configuration": "Debug"
      },
      "configurations": {
        "production": {
          "configuration": "Release"
        }
      }
    },
    "lint": {
      "executor": "@nx-dotnet/core:format",
      "cache": true,
      "inputs": [
        "{projectRoot}/**/*.{cs,fs,vb}"
      ]
    },
    "swagger": {
      "executor": "@nx-dotnet/core:update-swagger",
      "outputs": [
        "{workspaceRoot}/generated/my-api-swagger/swagger.json"
      ],
      "options": {
        "output": "generated/my-api-swagger/swagger.json"
      },
      "dependsOn": [
        "build"
      ]
    },
    "semantic-release": {
      "executor": "@theunderscorer/nx-semantic-release:semantic-release",
      "options": {
        "github": true,
        "changelog": true,
        "npm": false,
        "tagFormat": "Apps.my-api-v${VERSION}"
      }
    }
  }
}
